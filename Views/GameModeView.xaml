<Page x:Class="WCFCliente.Views.GameModeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WCFCliente.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="GameModeView">

    <Grid Background="White">
        <Button x:Name="btnCancel" 
                Content="Cancel" 
                HorizontalAlignment="Center" 
                Margin="0,390,0,0" 
                VerticalAlignment="Top" Click="btnCancel_Click"/>
        <Button Name="btnSinglePlayer" 
                Background="{x:Null}" 
                Margin="121,133,507,342" BorderBrush="{x:Null}">
            <Image Source="/Images/usuario.png"></Image>
        </Button>
        <Button Name="btnMultiplayer" 
                Background="{x:Null}" 
                Margin="427,150,201,325" Click="btnMultiplayer_Click" BorderBrush="{x:Null}">
            <Image Source="/Images/grupo.png"></Image>
        </Button>

    </Grid>
</Page>
